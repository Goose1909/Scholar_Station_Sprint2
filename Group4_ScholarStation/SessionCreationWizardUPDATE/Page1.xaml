<Page x:Class="SessionCreationWizardUPDATE.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SessionCreationWizardUPDATE"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Page1">

    <Grid Background="#FFE9E9E9">
        <Label Content="Please select a session type." HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontFamily="Arial Rounded MT Bold" Background="{x:Null}" Foreground="DarkSlateGray"/>
        <RadioButton Content="Study Session" HorizontalAlignment="Left" Margin="214,186,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="DarkSlateGray"/>
        <RadioButton Content="Tutor Session" HorizontalAlignment="Left" Margin="214,206,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="DarkSlateGray"/>
        <Button Content="Next" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="75" Foreground="DarkSlateGray" FontFamily="Arial Rounded MT Bold" Margin="0,0,0,5" Click="Button_Click"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="152,188,0,0" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold" Foreground="DarkSlateGray"/>

    </Grid>
</Page>
