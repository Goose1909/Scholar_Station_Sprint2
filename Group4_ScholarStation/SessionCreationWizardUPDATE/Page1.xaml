<Page x:Class="SessionCreationWizardUPDATE.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SessionCreationWizardUPDATE"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="Page1">

    <Grid>
        <TextBlock Text="Please select the type of session you prefer." HorizontalAlignment="Center" FontSize="20"/>
        <Label Content="Type:" VerticalAlignment="Center" Margin="150,0,150,20"/>
        <StackPanel Margin="180,150,180,150">
            <RadioButton Content="Study Session" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <RadioButton Content="Tutor Session" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" Height="35">
            <Button Content="Next" MaxHeight="20" MaxWidth="50"/>
        </StackPanel>
    </Grid>
</Page>
